<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wallpaperID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper1"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".MainActivity">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView

            android:id="@+id/SentenceID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            android:text="Here will give the sentence "
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/textbody"
            android:textSize="30sp"
            android:textStyle="bold"

            />
    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"

        android:orientation="horizontal">

        <Button

            android:id="@+id/PreviousID"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_desingn"
            android:drawableLeft="@drawable/previous"
            android:onClick="unlockScreen"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"

            android:background="@drawable/button_desingn"
            android:onClick="unlockScreen"
            android:text="unlock"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"

            />

        <Button

            android:id="@+id/NextID"

            android:layout_width="50dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="80dp"
            android:background="@drawable/button_desingn"
            android:drawableRight="@drawable/next"
            android:onClick="unlockScreen"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />


    </LinearLayout>




</LinearLayout>