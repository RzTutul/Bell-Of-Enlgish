<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wallpaperID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper1"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/setinngID"
        android:background="@drawable/settting_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="end"
        />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/SentenceID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Here will give the sentence "
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/textbody"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/nikoshlight"

            />
    </LinearLayout>


    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">


        <Button
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_desingn"
            android:drawableLeft="@drawable/tap"
            android:onClick="unlockScreen"
            android:text="Unlock"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            />



    </LinearLayout>




</LinearLayout>